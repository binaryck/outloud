{
  "manifest_version": 3,
  "name": "OutLoud",
  "description": "Archive your social media posts with immutable, decentralized storage technology for permanent preservation.",
  "version": "0.1.0",
  "version-name": "0.1.0",
  "privacy_policy": "https://github.com/binaryck/outloud/blob/main/PRIVACY_POLICY.md",
  "permissions": ["activeTab", "storage", "scripting"],
  "web_accessible_resources": [
    {
      "resources": ["src/scripts/pageEventHandlers.js"],
      "matches": ["https://x.com/*", "https://twitter.com/*"]
    }
  ],
  "background": {
    "service_worker": "src/background/background.ts",
    "type": "module"
  },
  "host_permissions": ["https://x.com/*", "https://twitter.com/*"],
  "content_scripts": [
    {
      "matches": ["https://x.com/*", "https://twitter.com/*"],
      "js": ["src/content/content.ts"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "OutLoud",
    "default_icon": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    }
  }
}
